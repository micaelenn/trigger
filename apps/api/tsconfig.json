{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "allowJs": true,
    "preserveConstEnums": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["./app/*"],
      "@/config/*": ["./config/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}